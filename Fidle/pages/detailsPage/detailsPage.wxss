page{
  height: 100%;
}
.slides swiper{
  width: 100%;
  height: 450rpx;
}
.slides swiper-item{
  display: flex;
  justify-content: center;
}
.slides image{
  width: 100%;
  height: auto;
  border-radius: 1%;
}
.detalsCard{
  padding: 40rpx;
  width: 100%;
  min-height: 700rpx;
  box-sizing:border-box;
  background-color: #ffffff; 
}
.placeholder-view {
  width: 100%;
  height: 110rpx;
}
.bottomCard{
  width: 100%;
  height: 110rpx;
  background-color: #ffffff; 
  display: flex;
  align-items:center;
}
.bottomCard van-icon{
  display: block;
  padding: 20rpx;
  margin-left: 30rpx;
  color: #7db5ee;
}
.bottomCard image{
  display: block;
  padding: 20rpx;
  margin-left: 30rpx;
  color: #7db5ee;
  width: 50rpx;
  height: auto;
}
.contact{
  border: none;
  margin-left: 30rpx;
  font-size: 30rpx;
}
.title{
  font-weight: bold;
}
.price{
  margin-top: 20rpx;
}
.price .current{
  color: #f14836;
}
.price .original{
  margin-left: 15rpx;
  color: #bbbbbb;
  text-decoration:line-through;
  font-size: 20rpx;
}
.tags{
  margin-top: 20rpx;
  vertical-align: middle;
}
.tags .tag{
  margin-top: 10rpx;
}
.tags text{
  font-size: 25rpx;
  vertical-align: middle;
}
.tags .tagsIcon{
  width: 35rpx;
  height: auto;
  margin-left: 15rpx;
  vertical-align: middle;
}
.tags van-tag{
  margin-left: 15rpx;
  vertical-align: middle;
}
.content{
  margin-top: 20rpx;
  font-size: 25rpx;
}