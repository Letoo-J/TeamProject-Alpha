/* pages/test/test.wxss */
/*标签页*/
.tab {
  display: flex;
  width: 100%;
  height: 500rpx;/*不设置这个的话，没条目时下拉框无法显示全*/
}

/*下拉框样式*/
c-select {
  display: inline-block;
  margin: 10rpx 5rpx 0 10rpx;
}

/*导航条*/
.nav_head {
  width: 100%;
  height: 100rpx;
  display: flex;
}

/*输入框*/
.input_box {
  border-radius: 10rpx;
  background: #eee;
  width: 420rpx;
  height: 70rpx;
  font-size: 0.8rem;
  line-height: 70rpx;
  display: inline-block;
  margin: 30rpx 0 0 150rpx;
  padding: 0 0 0 20rpx;
}

/*搜索按钮*/
.search_btn {
  border-radius: 10rpx;
  background: #7DB5EE;
  color: #fff;
  width: 100rpx;
  height: 70rpx;
  font-size: 0.6rem;
  line-height: 70rpx;
  text-align: center;
  display: inline-block;
  margin: 30rpx 0 0 30rpx;
}

/*筛选按钮*/
.screen_btn {
  background: #eee;
  display: inline-block;
  width: 100rpx;
  height: 60rpx;
  font-size: 0.6rem;
  text-align: center;
  line-height: 60rpx;
  margin: 10rpx 5rpx 0 10rpx;
}
.screen_btn .img {
  width: 20rpx;
  height: 40rpx;
}

.screen_btn_left1 {
  margin-left: 50rpx;
}

.screen_btn-left2 {
  margin-left: 100rpx;
}

/*加宽筛选按钮*/
.screen_btn_large {
  width: 150rpx;
}