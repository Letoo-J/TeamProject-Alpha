/* 多行文本框 */

.message {
    height: 180rpx !important;
}


/* 自定义标签 */

.tag {
    background-color: #F3F4F4;
    margin-left: 30rpx;
    margin-top: 10rpx;
    border-radius: 5rpx;
    font-size: 30rpx;
    float: left;
}


/* 自定义小标题 */

.label {
    float: left;
    padding-left: 30rpx;
    padding-right: 50rpx;
    text-align: center;
    color: #646566;
    color: var(--field-label-color, #646566)
}


/* 图片 */

.img-input {
    float: left;
}


/* 自定义下划线 */

.border {
    border-bottom: 1rpx solid #F4F5F7;
}


/* 标签图片 */

.img {
    width: 40rpx;
    padding-left: 35rpx;
}


/* 新旧程度 类别 */

.display {
    flex-direction: column;
    position: relative;
    display: flex;
    box-sizing: border-box;
    width: 100%;
    padding: 10rpx 30rpx;
    font-size: 28rpx;
    line-height: 48rpx;
    color: #323233;
    background-color: #fff;
}


/* 发布按钮 */

.release {
    display: block;
    padding-top: 40rpx;
    margin: 0 auto;
}


/* 添加图标 */

.icon {
    background-color: #F3F4F4;
    margin-left: 30rpx;
    margin-top: 10rpx;
    border-radius: 5rpx;
    position: relative;
    top: 5rpx;
}


/* 新旧程度 类别选中 */

.selected {
    background-color: #7DB5EE;
}


/* 新增标签框 */

.tag-create {
    width: 120rpx;
}

.addimg {
    width: 160rpx;
    height: 160rpx;
    float: left;
}


/* 图片 */

.img_box {
    width: 690rpx;
    position: relative;
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
}

.upload_img {
    width: 170rpx;
    height: 170rpx;
    position: relative;
    padding-left: 20rpx;
}

.imgs {
    width: 170rpx;
    height: 170rpx;
    border: 1px solid #c0ccda;
}

.imgs .images {
    position: relative;
}

.images button {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
}

.img_box .images {
    height: 212rpx;
    border: 1px solid #E8E8E8;
    border-radius: 4rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.img_box .images>image {
    width: 60rpx;
    height: 60rpx;
}

.closeImv {
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 50rpx;
    height: 50rpx;
}

.closeLabel {
    width: 20rpx;
    height: 20rpx;
}