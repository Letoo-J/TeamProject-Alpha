<van-tabs>
  <van-tab title="已发布" name="publish">
    <van-card class="card" bindtap="clickPublishTaskCard" data-index="{{index}}">
      <view slot="title" class="title">
        <view class="modifyTag">
          <view>
            <image class="state" mode="widthFix" src="../../icons/circle.png"></image>
            <text class="stateText">{{state[0]}}</text>
          </view>
          <image class="modify" mode="widthFix" catchtap="" hover-stop-propagation='true' 
          data-index="{{index}}" src="../../icons/modify.png"></image>
        </view>
        <view class="secondLine">
          <text>{{taskTitle}}</text>
          <view class="price">
            <text class="sign">￥</text>
            <text class="priceText">{{taskPrice}}</text>
          </view>
        </view>
      </view>
      <view slot="tags" class="tagTask">
        <image class="tagsIcon" mode="widthFix" src="../../icons/label.png"></image>
        <van-tag wx:for="{{taskTagsList}}" wx:key="{{index}}" class="tagItem" color="#dbdbdb" text-color="#394044">
          {{item}}</van-tag>
        <view class="taskBtns">
          <van-button class="btn" catchtap="showOverlap" hover-stop-propagation='true' data-index="{{index}}">进行</van-button>
          <van-button class="btn" catchtap="" hover-stop-propagation='true' data-index="{{index}}">删除</van-button>
          <van-overlay show="{{ show }}">
            <view class="wrapper">
              <van-panel title="生成订单" use-footer-slot>
                <van-cell-group>
                  <van-field value="{{ value }}" placeholder="请输入接受人id" border="{{ false }}" />
                </van-cell-group>
                <view slot="footer" class="panelBtns">
                  <van-button class="panelBtn" catchtap="" hover-stop-propagation='true'>确认</van-button>
                  <van-button class="panelBtn" catchtap="onClickHide" hover-stop-propagation='true'>取消</van-button>
                </view>
              </van-panel>
            </view>
          </van-overlay>
        </view>
      </view>
    </van-card>
    <van-card class="card">
      <view slot="title" class="title" bindtap="clickTaskCard">
        <view class="modifyTag">
          <view>
            <image class="state" mode="widthFix" src="../../icons/circle (1).png"></image>
            <text class="stateText">{{state[1]}}</text>
          </view>
          <image class="modify" mode="widthFix" src="../../icons/modify.png"></image>
        </view>
        <view class="secondLine">
          <text>{{taskTitle}}</text>
          <view class="price">
            <text class="sign">￥</text>
            <text class="priceText">{{taskPrice}}</text>
          </view>
        </view>
      </view>
      <view slot="tags" class="tagTask">
        <image class="tagsIcon" mode="widthFix" src="../../icons/label.png"></image>
        <van-tag wx:for="{{taskTagsList}}" wx:key="{{index}}" class="tagItem" color="#dbdbdb" text-color="#394044">
          {{item}}</van-tag>
        <view class="taskBtns">
          <van-button class="btn">取消</van-button>
          <van-button class="btn">完成</van-button>
        </view>
      </view>
    </van-card>
    <van-card class="card">
      <view slot="title" class="title" bindtap="clickTaskCard">
        <view class="modifyTag">
          <view>
            <image class="state" mode="widthFix" src="../../icons/circle (2).png"></image>
            <text class="stateText">{{state[2]}}</text>
          </view>
          <image class="modify" mode="widthFix" src="../../icons/modify.png"></image>
        </view>
        <view class="secondLine">
          <text>{{taskTitle}}</text>
          <view class="price">
            <text class="sign">￥</text>
            <text class="priceText">{{taskPrice}}</text>
          </view>
        </view>
      </view>
      <view slot="tags" class="tagTask">
        <image class="tagsIcon" mode="widthFix" src="../../icons/label.png"></image>
        <van-tag wx:for="{{taskTagsList}}" wx:key="{{index}}" class="tagItem" color="#dbdbdb" text-color="#394044">
          {{item}}</van-tag>
        <view class="taskBtns">
          <van-button class="btn">评价</van-button>
        </view>
      </view>
    </van-card>
  </van-tab>
  <van-tab title="已接受" name="recept">
    <van-card class="card">
      <view slot="title" class="title" bindtap="clickAcceptTaskCard">
        <view class="modifyTag">
          <view>
            <image class="state" mode="widthFix" src="../../icons/circle (1).png"></image>
            <text class="stateText">{{state[1]}}</text>
          </view>
          <image class="modify" mode="widthFix" catchtap="" hover-stop-propagation='true' src="../../icons/modify.png"></image>
        </view>
        <view class="secondLine">
          <text>{{taskTitle}}</text>
          <view class="price">
            <text class="sign">￥</text>
            <text class="priceText">{{taskPrice}}</text>
          </view>
        </view> 
      </view>
      <view slot="tags" class="tagTask">
        <image class="tagsIcon" mode="widthFix" src="../../icons/label.png"></image>
        <van-tag wx:for="{{taskTagsList}}" wx:key="{{index}}" class="tagItem" color="#dbdbdb" text-color="#394044">
          {{item}}</van-tag>
        <view class="taskBtns">
          <van-button class="btn" catchtap="" hover-stop-propagation='true'>取消</van-button>
        </view>
      </view>
    </van-card>
    <van-card class="card">
      <view slot="title" class="title" bindtap="clickTaskCard">
        <view class="modifyTag">
          <view>
            <image class="state" mode="widthFix" src="../../icons/circle (2).png"></image>
            <text class="stateText">{{state[2]}}</text>
          </view>
          <image class="modify" mode="widthFix" src="../../icons/modify.png"></image>
        </view>
        <view class="secondLine">
          <text>{{taskTitle}}</text>
          <view class="price">
            <text class="sign">￥</text>
            <text class="priceText">{{taskPrice}}</text>
          </view>
        </view>
      </view>
      <view slot="tags" class="tagTask">
        <image class="tagsIcon" mode="widthFix" src="../../icons/label.png"></image>
        <van-tag wx:for="{{taskTagsList}}" wx:key="{{index}}" class="tagItem" color="#dbdbdb" text-color="#394044">
          {{item}}</van-tag>
        <view class="taskBtns">
          <van-button class="btn">评价</van-button>
        </view>
      </view>
    </van-card>
  </van-tab>
</van-tabs>