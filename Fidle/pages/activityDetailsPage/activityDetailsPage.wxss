page{
  height: 100%;
}
.slides swiper{
  width: 100%;
  height: 450rpx;
}
.slides swiper-item{
  display: flex;
  justify-content: center;
}
.slides image{
  width: 100%;
  height: auto;
  border-radius: 1%;
}
.detalsCard{
  padding: 50rpx;
  width: 100%;
  box-sizing:border-box;
  background-color: #ffffff; 
}
.bottomCard{
  width: 100%;
  height: 100rpx;
  background-color: #ffffff; 
  display: flex;
  justify-content: space-evenly;
}
.bottomCard van-icon{
  display: block;
  padding: 20rpx;
  margin-left: 30rpx;
  color: #7db5ee;
}
.bottomCard image{
  display: block;
  padding: 20rpx;
  margin-left: 30rpx;
  color: #7db5ee;
  width: 50rpx;
  height: auto;
}
