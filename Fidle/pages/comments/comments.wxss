.container {
  width: 100vw;
  height: 100vh;
  padding: 0;
}

.itembg {
  background-color: #fff;
  width: 710rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 40rpx;
  border-radius: 20rpx;
  position: relative;
}

.photo {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  box-shadow: 4rpx 4rpx 3rpx #BBB;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.none {
  margin-top: 100rpx;
}

.name {
  position: absolute;
  left: 0;
  margin-left: 140rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
  font-size: 40rpx;
}

.time {
  position: absolute;
  right: 0;
  margin-top: 40rpx;
  margin-right: 30rpx;
  font-size: 32rpx;
}

.comment {
  margin-top: 26rpx;
  margin-bottom: 30rpx;
}

.content {
  margin-left: 30rpx; 
  font-size: 32rpx;
}

