<!--pages/changeInf/changeInf.wxml-->
<view class="container">
  <view class="photobg" bindtap="changeInf">
    <view><image class="photo" src="{{imgsrc}}"></image></view>
  </view>
  <view class="itembg">
    <view class="itemname words">
      <text class="iconfont icon-person left"></text>
      {{username}}
    </view>
  </view>
  <view class="itembg">
    <view class="itemname words">
      <text class="iconfont icon-phone left"></text>
      {{phonenum}}
    </view>
  </view>
  <view class="itembg">
    <view class="itemname words">
      <text class="iconfont icon-qq left"></text>
      {{qqnum}}
    </view>
  </view>
  <view class="buttongroup">
    <button class="button" style="width:400rpx" bindtap="change">修改信息</button>
    <button class="button" style="width:400rpx" bindtap="logout">退出登录</button>
  </view>
</view>