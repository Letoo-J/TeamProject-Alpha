<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fidledemo.dao.TaskTagDAO">
    <insert id="insertTaskTag" parameterType="com.example.fidledemo.DO.TaskTagDO">
        insert into task_tag(task_id,tag_id,gmt_create,gmt_modified)
        values (#{task_id},#{tag_id},now(),now());
    </insert>
    <delete id="deleteTaskTag" parameterType="long">
        delete from task_tag
        where id=#{id}
    </delete>
    <update id="updateTaskTag" parameterType="com.example.fidledemo.DO.TaskTagDO">
        update task_tag
        <set>
            <if test="task_id !=NULL AND task_id !=''">task_id=#{task_id},</if>
            <if test="tag_id !=NULL AND tag_id !=''">tag_id=#{tag_id},</if>
            gmt_modified=now()
        </set>
        where id=#{id}
    </update>
</mapper>