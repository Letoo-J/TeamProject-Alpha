<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fidledemo.dao.GoodsTagDAO">
    <insert id="insertGoodsTag" parameterType="com.example.fidledemo.DO.GoodsTagDO">
        insert into goods_tag(good_id,tag_id,gmt_create,gmt_modified)
        values (#{good_id},#{tag_id},now(),now());
    </insert>
    <delete id="deleteGoodsTag" parameterType="long">
        delete from goods_tag
        where id=#{id}
    </delete>
    <update id="updateGoodsTag" parameterType="com.example.fidledemo.DO.GoodsTagDO">
        update goods_tag
        <set>
            <if test="good_id !=NULL AND good_id !=''">good_id=#{good_id},</if>
            <if test="tag_id !=NULL AND tag_id !=''">tag_id=#{tag_id},</if>
            gmt_modified=now()
        </set>
        where id=#{id}
    </update>


</mapper>