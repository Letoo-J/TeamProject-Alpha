<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fidledemo.dao.ActivityTagDAO">
    <insert id="insertActivityTag" parameterType="com.example.fidledemo.DO.ActivityTagDO">
        insert into activity_tag(activity_id,tag_id,gmt_create,gmt_modified)
        values (#{activity_id},#{tag_id},now(),now());
    </insert>
    <delete id="deleteActivityTag" parameterType="long">
        delete from activity_tag
        where id=#{id}
    </delete>
    <update id="updateActivityTag" parameterType="com.example.fidledemo.DO.ActivityTagDO">
        update activity_tag
        <set>
            <if test="activity_id !=NULL AND activity_id !=''">activity_id=#{activity_id},</if>
            <if test="tag_id !=NULL AND tag_id !=''">tag_id=#{tag_id},</if>
            gmt_modified=now()
        </set>
        where id=#{id}
    </update>
</mapper>