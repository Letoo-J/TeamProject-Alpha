<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.fidledemo.dao.TaskEnshrineDAO">
    <insert id="insertTaskEnshrine" parameterType="com.example.fidledemo.DO.TaskEnshrineDO">
        insert into task_enshrine(user_id,goods_id,gmt_create,gmt_modified)
        values (#{user_id},#{task_id},now(),now());
    </insert>
    <delete id="deleteTaskEnshrine" parameterType="long">
        delete from task_enshrine
        where id=#{id}
    </delete>
    <update id="updateTaskEnshrine" parameterType="com.example.fidledemo.DO.TaskEnshrineDO">
        update task_enshrine
        <set>
            <if test="user_id !=NULL AND user_id !=''">user_id=#{user_id},</if>
            <if test="task_id !=NULL AND task_id !=''">task_id=#{task_id},</if>
            gmt_modified=now()
        </set>
        where id=#{id}
    </update>
</mapper>